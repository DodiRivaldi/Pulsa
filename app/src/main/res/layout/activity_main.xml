<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dodirivaldi.pulsa.MainActivity">



    <Spinner
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="130sp"
        android:id="@+id/spinoper"
        android:spinnerMode="dropdown"
        android:popupBackground="#E91E63"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operatortext"
        android:hint="Operator"
        android:focusable="false"
        android:layout_below="@+id/spinoper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:textColor="#ffff"
        android:popupBackground="#E91E63"
                                                                                                                                                                                                                                                        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinharga"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="Harga"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hargaText"
        android:layout_below="@+id/operatortext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serverText"
        android:layout_below="@+id/hargaText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Server"/>

    <Spinner
        android:textColor="#ffff"
        android:popupBackground="#E91E63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinserver"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="No. Telp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/telpText"
        android:layout_below="@+id/serverText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:textColor="#ffff"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Proses"
        android:onClick="proses"
        android:id="@+id/prosesButton"
        android:layout_below="@+id/telpText"
        android:background="#E91E63"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:textColor="#ffff"
        android:background="#E91E63"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Hapus"
        android:id="@+id/hapusButton"
        android:layout_alignTop="@+id/prosesButton"
        android:onClick="hapus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="Hasil"
        android:onClick="kirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hasilText"
        android:layout_below="@+id/prosesButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="Tujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tujuanText"
        android:layout_below="@+id/hasilText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:id="@+id/button"
        android:onClick="kirim"
        android:text="Kirim"
        android:layout_below="@+id/tujuanText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
       android:textColor="#ffff"/>

</RelativeLayout>
